<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimens_8dp"
            android:layout_marginStart="@dimen/dimens_8dp"
            android:layout_marginEnd="@dimen/QA_limits"
            app:cardBackgroundColor="@color/QuestionColor"
            app:cardCornerRadius="@dimen/dimens_8dp">

            <TextView
                android:id="@+id/question"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimens_8dp"
                android:textColor="@color/QuestionTextColor"
                android:textSize="@dimen/question_size"
                tools:text="@tools:sample/full_names" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>